{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Run",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "./src/main.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
            "windows": {
                "console": "integratedTerminal"
            },
            "preLaunchTask": "Activate Virtual Environment"
        }
    ]
}